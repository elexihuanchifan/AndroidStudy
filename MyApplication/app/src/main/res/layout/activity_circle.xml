<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.administrator.myapplication.widget.CircleView
        android:layout_width="100dp"
        android:layout_height="100dp" />


    <com.example.administrator.myapplication.widget.IndicatorSeekBar
        android:id="@+id/img_indicator_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white" />

    <com.example.administrator.myapplication.widget.IndicatorDotSeekBar
        android:id="@+id/circle_indicator_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white" />

    <ProgressBar
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:max="100"
        android:progress="50" />

</LinearLayout>